<p id="notice"><%= notice %></p>

<h1>Permits</h1>

<table>
  <thead>
    <tr>
      <th>Permitid</th>
      <th>Permit Description</th>
      <th>Filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permits.each do |permit| %>
      <tr>
        <td><%= permit.permitid %></td>
        <td><%= permit.permit %></td>
        <td><%= permit.filename %></td>
        <td><%= link_to 'Show', permit %></td>
        <td><%= link_to 'Edit', edit_permit_path(permit) %></td>
        <td><%= link_to 'Destroy', permit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

